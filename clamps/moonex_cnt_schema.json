{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id" : "space_data_system",
    "description" : "The Moon Express command and telemetry JSON schema, loosely based on the XTCE schema",
    "type" : "object",
    "required" : [ "space_system" ],

    "properties" : {
        "space_system" : {
            "title" : "Space System",
            "description" : "The root specification of a command and telemetry data system",
            "type" : "object",
            "required" : ["name", "description"],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the data system",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the data system",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "common_data" : {
                    "title" : "Common Data",
                    "description" : "Common data associated with the space_system, including general abstract sequence containers",
                    "type" : "object",
                    "additionalProperties" : false,
                    "propertyOrder" : 3,
                    "properties" : {
                        "constants" : {
                            "title" : "Constants",
                            "description" : "A list of constant values referenced by command and telemetry parameters",
                            "type" : "array",
                            "format" : "tabs",
                            "propertyOrder" : 1,
                            "items" : { "$ref" : "#/definitions/constant" }
                        },
                        "parameter_types" : {
                            "title" : "Parameter Types",
                            "description" : "A list of parameter type definitions that the space_system command and telemetry parameters are built upon",
                            "type" : "array",
                            "format" : "tabs",
                            "propertyOrder" : 2,
                            "items" : { "$ref" : "#/definitions/parameter_type" }
                        },
                        "sequence_containers" : {
                            "title" : "Common Sequence Containers",
                            "description" : "A set of abstract data blocks available to more specific telemetry/command containers through inheritance",
                            "type" : "array",
                            "format" : "tabs",
                            "propertyOrder" : 3,
                            "items" : { "$ref" : "#/definitions/sequence_container" }
                        },
                        "conversions" : {
                            "title" : "Data Conversions",
                            "description" : "A set of expressions used to convert raw command/telemetry values to engineering units",
                            "type" : "array",
                            "format" : "tabs",
                            "propertyOrder" : 4,
                            "items" : { "$ref" : "#/definitions/conversion" }
                        }
                    }
                },
                "telemetry_data" : {
                    "title" : "Telemetry Data",
                    "description" : "Telemetry data associated with the space_system",
                    "type" : "object",
                    "required" : [ "sequence_containers" ],
                    "additionalProperties" : false,
                    "propertyOrder" : 4,
                    "properties" : {
                        "sequence_containers" : {
                            "title" : "Telemetry Sequence Containers",
                            "description" : "A set of telemetry sequence containers",
                            "type" : "array",
                            "format" : "tabs",
                            "propertyOrder" : 1,
                            "items" : { "$ref" : "#/definitions/sequence_container" }
                        },
                        "limits" : {
                            "title" : "Telemetry Limits",
                            "description" : "A set of limits that may be applied to telemetry parameters",
                            "type" : "array",
                            "format" : "tabs",
                            "propertyOrder" : 2,
                            "items" : { "$ref" : "#/definitions/limit" }
                        }
                    }
                },
                "command_data" : {
                    "title" : "Command Data",
                    "description" : "Command data associated with the space_system",
                    "type" : "object",
                    "required" : [ "sequence_containers" ],
                    "additionalProperties" : false,
                    "propertyOrder" : 5,
                    "properties" : {
                        "sequence_containers" : {
                            "title" : "Command Sequence Containers",
                            "description" : "A set of command sequence containers",
                            "type" : "array",
                            "format" : "tabs",
                            "items" : { "$ref" : "#/definitions/command_sequence_container" }
                        }
                    }
                },
                "host" : {
                    "title" : "Host Processor",
                    "description" : "The processor hosting the space data system",
                    "type" : "object",
                    "format" : "grid",
                    "propertyOrder" : 6,
                    "items" : { "$ref" : "#/definitions/host" }
                },
                "sub_systems" : {
                    "title" : "Child Space Systems",
                    "description" : "A list of space_systems that extend and inherit this space_system",
                    "type" : "array",
                    "propertyOrder" : 7,
                    "additionalProperties" : false,
                    "items" : { "$ref" : "space_data_system" }
                }
            }
        }
    },


    "definitions" : {
        "endianness" : {
            "description" : "An expression of endinness in the context of processor architecutre or the order in which bytes of a single value are encoded within a binary stream",
            "type" : "string",
            "enum" : ["little_endian", "big_endian"]
        },
        "limit" : {
            "description" : "The allowable range of a telemetry parameter",
            "headerTemplate" : "{{ i }} - {{ self.name }}",
            "type" : "object",
            "format" : "grid",
            "required" : ["name", "dangerous_low", "dangerous_high", "critical_low", "critical_high"],
            "additionalProperties" : false,
            "uniqueProperties" : true,
            "properties" : {
                "name" : {
                    "title" : "Name",
                    "description" : "The name of the limit definition, referenced by telemetry parameters",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "critical_low" : {
                    "title" : "Critical Low",
                    "description" : "The minimum value (inclusive) in the range of critically low values",
                    "type" : "number",
                    "format" : "number",
                    "propertyOrder" : 2
                },
                "dangerous_low" : {
                    "title" : "Dangerous Low",
                    "description" : "The minimum value (inclusive) in the range of dangerously low values",
                    "type" : "number",
                    "format" : "number",
                    "propertyOrder" : 3
                },
                "dangerous_high" : {
                    "title" : "Dangerous High",
                    "description" : "The maximum value (inclusive) in the range dangerously high values",
                    "type" : "number",
                    "format" : "number",
                    "propertyOrder" : 4
                },
                "critical_high" : {
                    "title" : "Critical High",
                    "description" : "The minimum value (inclusive) in the range of critically high values",
                    "type" : "number",
                    "format" : "number",
                    "propertyOrder" : 5
                }
            }
        },
        "conversion" : {
            "description" : "An expression converting raw data values to engineering units",
            "headerTemplate" : "{{ i }} - {{ self.name }}",
            "type" : "object",
            "format" : "grid",
            "required" : ["name", "description", "conversion_units", "conversion_expression"],
            "additionalProperties" : false,
            "uniqueProperties" : true,
            "properties" : {
                "name" : {
                    "description" : "The unique name of the conversion expression, referenced by command/telemetry parameters",
                    "title" : "Name",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "title" : "Description",
                    "description" : "A description of the conversion expression",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "raw_units" : {
                    "title" : "Raw Units",
                    "description" : "The unit of the raw data before conversion",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 3
                },
                "conversion_units" : {
                    "title" : "Conversion Units",
                    "description" : "The engineering unit of the converted value",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 4
                },
                "conversion_expression" : {
                    "title" : "Conversion Expression",
                    "description" : "A mathematical expression applied to the raw data (in terms of x)",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 5
                },
                "expression_comment" : {
                    "title" : "Expression Comments",
                    "description" : "Comments in regard to the expression that may be useful for human interpretation",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 6
                }
            }
        },
        "constant" : {
            "description" : "A constant value definition",
            "headerTemplate" : "{{ i }} - {{ self.name }}",
            "type" : "object",
            "required" : [ "name", "description", "value" ],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the constant",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the constant",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "value" : {
                    "description" : "The value of the constant",
                    "type" : [ "number", "string" ],
                    "propertyOrder" : 3
                }
            }
        },
        "units" : {
            "description" : "A standard unit of measurement in which a quantity may be expressed",
            "type" : "object",
            "required" : ["label", "description", "abbreviation"],
            "additionalProperties" : false,
            "properties" : {
                "label" : {
                    "description" : "The extended form label of the units",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the units",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "abbreviation" : {
                    "description" : "The short form label of the units",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 3
                }
            }
        },
        "host" : {
            "title" : "Host",
            "description" : "A processor hosting a space_system",
            "type" : "object",
            "required" : ["name", "description", "bits", "byte_order"],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the host",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the host",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "byte_order" : {
                    "title" : "byte order",
                    "$ref" : "#/definitions/endianness",
                    "propertyOrder" : 3
                },
                "bits" : {
                    "title" : "bits",
                    "description" : "The CPU architecture size in bits",
                    "type" : "number",
                    "format" : "number",
                    "propertyOrder" : 4
                }
            }
        },
        "parameter_type" : {
            "description" : "The various primitive parameter type subschemas",
            "headerTemplate" : "{{ i }} - {{ self.name }}",
            "type" : "object",
            "oneOf" : [
                { "$ref" : "#/definitions/number_parameter_type" },
                { "$ref" : "#/definitions/enumeration_parameter_type" },
                { "$ref" : "#/definitions/string_parameter_type" },
                { "$ref" : "#/definitions/pointer_parameter_type" }
            ]
        },
        "number_parameter_type" : {
            "title" : "Number Parameter Type",
            "description" : "An integer or floating point parameter type",
            "type" : "object",
            "format" : "grid",
            "required" : [ "name", "description", "base_type", "size_in_bits", "signed" ],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "base_type" : {
                    "title" : "base type",
                    "description" : "The abstract base parameter type",
                    "type" : "string",
                    "enum" : [ "integer", "float" ],
                    "propertyOrder" : 3
                },
                "size_in_bits" : {
                    "title" : "size in bits",
                    "description" : "The size of the parameter type in bits",
                    "type" : "number",
                    "format" : "number",
                    "minimum" : 1,
                    "maximum" : 64,
                    "propertyOrder" : 4
                },
                "signed" : {
                    "description" : "Indicates whether the number parameter type is capable of representing negative values",
                    "type" : "boolean",
                    "propertyOrder" : 5
                },
                "valid_range" : {
                    "title" : "valid range",
                    "description" : "The valid range of the number parameter type",
                    "type" : "object",
                    "required" : [ "min", "max" ],
                    "additionalProperties" : false,
                    "format" : "table",
                    "propertyOrder" : 6,
                    "properties" : {
                        "min" : {
                            "description" : "The minimum (inclusive) valid value of the number parameter type",
                            "type" : "number",
                            "format" : "number",
                            "propertyOrder" : 1
                        },
                        "max" : {
                            "description" : "The maximum (inclusive) valid value of the number parameter type",
                            "type" : "number",
                            "format" : "number",
                            "propertyOrder" : 2
                        }
                    }
                },
                "default_value" : {
                    "title" : "default value",
                    "description" : "The default initial value of the number parameter type",
                    "type" : "number",
                    "format" : "number",
                    "propertyOrder" : 7
                }
            }
        },
        "enumeration_parameter_type" : {
            "title" : "Enumeration Parameter Type",
            "description" : "An enumeration parameter type",
            "type" : "object",
            "format" : "grid",
            "required" : [ "name", "description", "base_type", "size_in_bits", "signed", "enumeration_list" ],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "base_type" : {
                    "title" : "base type",
                    "description" : "The base parameter type",
                    "type" : "string",
                    "enum" : [ "enumeration" ],
                    "propertyOrder" : 3
                },
                "size_in_bits" : {
                    "title" : "size in bits",
                    "description" : "The size of the enumeration parameter type in bits",
                    "type" : "number",
                    "format" : "number",
                    "minimum" : 1,
                    "maximum" : 64,
                    "propertyOrder" : 4
                },
                "signed" : {
                    "description" : "Indicates whether the enumeration parameter type represents negative values",
                    "type" : "boolean",
                    "propertyOrder" : 5
                },
                "enumeration_list" : {
                    "title" : "Enumeration List",
                    "description" : "An ordered list of values enumerated by the parameter type",
                    "type" : "array",
                    "format" : "table",
                    "propertyOrder" : 6,
                    "items" : {
                        "type" : "object",
                        "required" : ["label", "value", "description"],
                        "additionalProperties" : false,
                        "properties" : {
                            "label" : {
                                "description" : "The enumerated value label",
                                "type" : "string",
                                "minLength" : 1,
                                "propertyOrder" : 1
                            },
                            "value" : {
                                "description" : "The enumerated value",
                                "type" : "number",
                                "format" : "number",
                                "propertyOrder" : 2
                            },
                            "description" : {
                                "description" : "A description of the enumerated value",
                                "type" : "string",
                                "propertyOrder" : 3
                            },
                            "bgcolor" : {
                                "description" : "The background color used to render the value on ground displays",
                                "type" : "string",
                                "propertyOrder" : 4,
                                "default" : "black"
                            },
                            "fgcolor" : {
                                "description" : "The foreground color used to render the value on ground displays",
                                "type" : "string",
                                "propertyOrder" : 5,
                                "default" : "green"
                            }
                        }
                    }
                }
            }
        },
        "string_parameter_type" : {
            "title" : "String Parameter Type",
            "description" : "A string parameter type",
            "type" : "object",
            "format" : "grid",
            "required" : [ "name", "description", "base_type", "length_in_characters" ],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the string parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the string parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "base_type" : {
                    "title" : "base type",
                    "description" : "The parameter type base",
                    "type" : "string",
                    "enum" : [ "string" ],
                    "propertyOrder" : 3
                },
                "length_in_characters" : {
                    "title" : "length in characters",
                    "description" : "The number of characters in a string parameter type",
                    "type" : "number",
                    "format" : "number",
                    "propertyOrder" : 4
                },
                "default_value" : {
                    "title" : "default value",
                    "description" : "The default string value",
                    "type" : "string",
                    "propertyOrder" : 5
                }
            }
        },
        "pointer_parameter_type" : {
            "title" : "Pointer Parameter Type",
            "description" : "A parameter type representing an address pointer, note the size of the pointer is inherited from the host",
            "type" : "object",
            "format" : "grid",
            "required" : [ "name", "description", "base_type" ],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the pointer parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "description" : {
                    "description" : "A description of the pointer parameter type",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "base_type" : {
                    "title" : "base type",
                    "description" : "The base data type pointed to",
                    "type" : "string",
                    "enum" : [ "pointer" ],
                    "propertyOrder" : 3
                }
            }
        },
        "special_array_index" : {
            "title" : "special index",
            "description" : "A special index in an array dimension",
            "type" : "object",
            "required" : [ "name", "index" ],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the special index",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "index" : {
                    "description" : "The actual index used to dreference a special value in an array",
                    "type" : "number",
                    "format" : "number",
                    "minimum" : 0,
                    "propertyOrder" : 2
                }
            }
        },
        "dimension" : {
            "title" : "Dimension",
            "description" : "A dimension of an array parameter",
            "type" : "object",
            "format" : "grid",
            "additionalProperties" : false,
            "required" : [ "len" ],
            "properties" : {
                "len" : {
                    "title" : "length",
                    "description" : "The length of (or number of items in) the dimension",
                    "type" : "number",
                    "format" : "number",
                    "minimum" : 2,
                    "propertyOrder" : 1
                },
                "comments" : {
                    "description" : "General remarks about the dimension",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "special_indices" : {
                    "title" : "special array indices",
                    "description" : "A list of special indices in the array dimension",
                    "type" : "array",
                    "minItems" : 1,
                    "format" : "table",
                    "propertyOrder" : 3,
                    "items" : { "$ref" : "#/definitions/special_array_index" }
                }
            }
        },
        "parameter" : {
            "title" : "Parameter",
            "description" : "A command or telemetry data field",
            "headerTemplate" : "{{ i }} - {{ self.name }}",
            "type" : "object",
            "format" : "grid",
            "required" : ["name", "description", "type"],
            "additionalProperties" : false,
            "properties" : {
                "name" : {
                    "description" : "The name of the parameter",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "mnemonic" : {
                    "description" : "Globally unique parameter mnemonic",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "description" : {
                    "description" : "A description of the parameter",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 3
                },
                "type" : {
                    "description" : "A reference to the name of a defined parameter type or sequence container.",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 4
                },
                "units" : {
                    "description" : "The abbreviation of the units in which this parameter value is expressed",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 5
                },
                "limit" : {
                    "description" : "A reference to the name of a defined limit (see Telemetry Data)",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 6
                },
                "conversion" : {
                    "description" : "A reference to the name of a defined conversion expression (see Common Data)",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 7
                },
                "dimensions" : {
                    "title" : "Array Dimensions",
                    "description" : "A list of the parameter's dimensions (for defining arrays)",
                    "type" : "array",
                    "minItems" : 1,
                    "items" : { "$ref" : "#/definitions/dimension" },
                    "propertyOrder" : 8
                }
            }
        },
        "parameter_criteria" : {
            "title" : "Parameter Criteria",
            "description" : "A restriction (or value) assigned to a parameter",
            "type" : "object",
            "required" : ["parameter_ref", "value"],
            "additionalProperties" : false,
            "uniqueItems" : true,
            "properties" : {
                "parameter_ref" : {
                    "title" : "Parameter Reference",
                    "description" : "The name of the parameter to assign a value",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "value" : {
                    "title" : "Value Constraint",
                    "description" : "The value constraining the parameter",
                    "type" : ["number", "string"],
                    "propertyOrder" : 2
                }
            }
        },
        "container_instance" : {
            "title" : "Container Instance",
            "description" : "A reference to (or instantiation of) an abstract base sequence container",
            "type" : "object",
            "format" : "grid",
            "required" : ["container_ref"],
            "additionalProperties" : false,
            "properties" : {
                "container_ref" : {
                    "title" : "Container Reference",
                    "description" : "The name of the abstract base sequence container",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "restriction_criteria" : {
                    "title" : "Restriction Criteria",
                    "description" : "A list of values constraining the parameter values",
                    "type" : "array",
                    "minItems" : 1,
                    "format" : "table",
                    "propertyOrder" : 2,
                    "items" : {
                        "$ref" : "#/definitions/parameter_criteria"
                    }
                }
            }
        },
        "sequence_container" : {
            "title" : "Sequence Container",
            "description" : "A description of a binary data structure, packet, or stream.",
            "headerTemplate" : "{{ i }} - {{ self.name }}",
            "type" : "object",
            "format" : "grid",
            "additionalProperties" : true,
            "required" : ["name", "description", "abstract", "parameters"],
            "properties" : {
                "name" : {
                    "description" : "The name of the sequence container",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 1
                },
                "tag" : {
                    "description" : "A label to categorize sets of sequence containers",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 2
                },
                "description" : {
                    "description" : "A description of the sequence container",
                    "type" : "string",
                    "minLength" : 1,
                    "propertyOrder" : 3
                },
                "abstract" : {
                    "description" : "Indicates whether this sequence container is an abstract block of data provided to more specific sequence containers through inheritance",
                    "type" : "boolean",
                    "default" : false,
                    "propertyOrder" : 4
                },
                "base_mnemonic" : {
                    "description" : "The mnemonic used as the base prefix of all parameter mnemonics",
                    "type" : "string",
                    "minLength" : 1,
